# =============================================================================
# UniCourt Automation Backend Environment Configuration
# =============================================================================
# Copy this file to .env and update the values according to your setup
# Lines starting with # are comments and will be ignored

# =============================================================================
# REQUIRED SETTINGS - MUST BE CONFIGURED
# =============================================================================

# API Access Key for securing all API endpoints
# This key is required for all API calls via the X-API-Key header
# Generate a strong, unique key for production use
API_ACCESS_KEY="your_strong_secret_api_key_here_CHANGE_THIS_IN_PRODUCTION"

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Port for the FastAPI server to listen on
# Default: 8000
# Valid range: 1024-65535 for non-root users
PORT=8000

# Host interface to bind the server to
# Default: "0.0.0.0" (all interfaces)
# Use "127.0.0.1" for localhost only
# Use "0.0.0.0" for all interfaces (production/Docker)
HOST="0.0.0.0"

# Development mode with auto-reload
# Set to "true" for development with automatic code reloading
# Set to "false" for production
RELOAD_DEV="false"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database filename (will be created in CURRENT_DOWNLOAD_LOCATION)
# Default: "app_data.db"
DATABASE_FILENAME="app_data.db"

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Python logging level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# DEBUG: Very verbose, includes all operations
# INFO: General operational information
# WARNING: Important warnings
# ERROR: Error conditions
# CRITICAL: Critical errors only
LOG_LEVEL="INFO"

# =============================================================================
# STORAGE AND DOWNLOAD CONFIGURATION
# =============================================================================

# Directory for downloads, database, session files, and screenshots
# Can be relative (to project root) or absolute path
# Default: "unicourt_downloads"
CURRENT_DOWNLOAD_LOCATION="unicourt_downloads"

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================

# Maximum number of concurrent case processing tasks
# Higher values = faster processing but more resource usage
# Recommended: 1-4 depending on system specs and UniCourt rate limits
# Default: 2
MAX_CONCURRENT_TASKS=2

# =============================================================================
# TIMEOUT CONFIGURATIONS (in seconds)
# =============================================================================

# Timeout for LLM API calls (document analysis)
# Default: 180 seconds (3 minutes)
# Increase for complex documents or slow LLM models
LLM_TIMEOUT_SECONDS=180

# General timeout for most operations
# Default: 60 seconds
# Used for web requests and medium-duration operations
GENERAL_TIMEOUT_SECONDS=60

# Short timeout for quick operations
# Default: 20 seconds
# Used for fast web actions like clicks and navigation
SHORT_TIMEOUT_SECONDS=20

# Very long timeout for extensive operations
# Default: 300 seconds (5 minutes)
# Used for complex case processing and large document downloads
VERY_LONG_TIMEOUT_SECONDS=300

# =============================================================================
# BROWSER AUTOMATION CONFIGURATION
# =============================================================================

# Whether to run browser in headless mode
# true: No browser window (recommended for production)
# false: Show browser window (useful for debugging)
HEADLESS_BROWSER="true"

# Browser user agent string override (optional)
# Leave empty to use default Playwright user agent
# USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"

# =============================================================================
# LLM PROCESSING CONFIGURATION
# =============================================================================

# Maximum number of images to send per LLM API call
# Higher values = more efficient but may hit API limits
# Default: 5
MAX_IMAGES_PER_LLM_CALL=5

# Maximum retry attempts for LLM processing per batch
# Default: 2
MAX_LLM_ATTEMPTS_PER_BATCH=2

# =============================================================================
# DOCUMENT PROCESSING CONFIGURATION
# =============================================================================

# Keywords for identifying Final Judgment documents (JSON array format)
# These are used to classify document types
DOC_KEYWORDS_FJ='["FINAL", "JUDGMENT"]'

# Keywords for identifying Complaint documents (JSON array format)
DOC_KEYWORDS_COMPLAINT='["COMPLAINT"]'

# Chunk size for processing paid document orders
# Default: 10
PAID_DOC_ORDER_CHUNK_SIZE=10

# =============================================================================
# UNICOURT CONFIGURATION
# =============================================================================

# Initial URL for UniCourt navigation
# Default: "https://app.unicourt.com/dashboard"
INITIAL_URL="https://app.unicourt.com/dashboard"

# URL identifier for login page detection
# Default: "/login"
LOGIN_PAGE_URL_IDENTIFIER="/login"

# URL identifier for dashboard page detection
# Default: "/dashboard"
DASHBOARD_URL_IDENTIFIER="/dashboard"

# Filename for storing UniCourt session data
# Default: "unicourt_session.json"
SESSION_FILENAME="unicourt_session.json"

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Whether to extract associated party addresses by default
# This can be overridden per case in the API
# true: Extract addresses when processing cases
# false: Skip address extraction
EXTRACT_ASSOCIATED_PARTY_ADDRESSES="true"

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Enable debug screenshots for troubleshooting
# true: Save screenshots during processing for debugging
# false: No debug screenshots (recommended for production)
DEBUG_SCREENSHOTS="false"

# Enable verbose HTTP logging
# true: Log all HTTP requests and responses
# false: Standard logging only
VERBOSE_HTTP_LOGGING="false"

# =============================================================================
# DOCKER AND DEPLOYMENT SPECIFIC
# =============================================================================

# Docker container timezone (only used when running in Docker)
# Examples: "America/New_York", "UTC", "Europe/London"
TZ="UTC"

# Memory limit for the application (Docker/systemd deployments)
# Format: 512m, 1g, 2g, etc.
# MEMORY_LIMIT="1g"

# =============================================================================
# ADDITIONAL NOTES
# =============================================================================
# 
# 1. Client-specific credentials (UniCourt login, OpenRouter API key) are
#    configured separately in config.json, not in this .env file
#
# 2. The API_ACCESS_KEY is the only authentication needed for API calls
#    All endpoints require this key in the X-API-Key header
#
# 3. For production deployment:
#    - Use a strong, unique API_ACCESS_KEY
#    - Set RELOAD_DEV to "false"
#    - Consider setting LOG_LEVEL to "WARNING" or "ERROR"
#    - Ensure proper file permissions on the .env file
#
# 4. For Docker deployment:
#    - You can override any of these values using Docker environment variables
#    - Mount the config.json file and download directory as volumes
#
# 5. All timeout values are in seconds and can be adjusted based on:
#    - Your system performance
#    - Network speed
#    - LLM provider response times
#    - UniCourt site responsiveness
#
# =============================================================================